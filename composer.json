{
    "name": "turkpin/admin-kit",
    "version": "1.0.6",
    "description": "A comprehensive admin panel toolkit for PHP applications with translation system, Docker support, and complete CLI commands",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "admin",
        "panel",
        "toolkit",
        "php",
        "dashboard",
        "crud",
        "authentication",
        "rbac",
        "translation",
        "i18n",
        "multilingual",
        "docker",
        "cli",
        "migration",
        "php8",
        "php83"
    ],
    "authors": [
        {
            "name": "Oktay AydoÄŸan",
            "email": "oktay@turkpin.com",
            "homepage": "https://turkpin.com",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/turkpin/admin-kit",
    "support": {
        "issues": "https://github.com/turkpin/admin-kit/issues",
        "source": "https://github.com/turkpin/admin-kit",
        "docs": "https://github.com/turkpin/admin-kit/blob/main/README.md"
    },
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "symfony/console": "^6.0|^7.0",
        "smarty/smarty": "^4.0|^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0|^11.0",
        "phpstan/phpstan": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "AdminKit\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "AdminKit\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/adminkit"
    ],
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        },
        "platform": {
            "php": "8.0.0"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse",
        "check-style": "php-cs-fixer fix --dry-run --diff",
        "fix-style": "php-cs-fixer fix",
        "install-dev": "composer install --dev",
        "post-install-cmd": [
            "@php bin/adminkit version"
        ],
        "post-update-cmd": [
            "@php bin/adminkit version"
        ]
    }
}
